<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" style="-fx-background-color: #D0ECE7;" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.networkgui.customWidgets.UserVisualiserView">
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <HBox alignment="CENTER" style="-fx-background-color: #0E6655;">
            <children>
                  <Label fx:id="title1" alignment="CENTER" style="-fx-background-color: #0E6655;" text="Profile" textFill="#d0ece7">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
            </children>
         </HBox>
            <StackPane>
               <children>
                  <AnchorPane fx:id="noSelectedUserView" style="-fx-background-color: #D0ECE7;">
                     <children>
                        <Label alignment="CENTER" prefHeight="343.0" prefWidth="250.0" text="Select a user to see their profile" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../../images/favpng_user-profile-icon-design.png" />
                           </image>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </ImageView>
                        <Label fx:id="userName" text="Name">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="userEmail" text="email" />
                        <Label fx:id="userCity" text="userCity">
                           <graphic>
                              <Label text="City:">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </graphic>
                           <padding>
                              <Insets top="30.0" />
                           </padding>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="userDateOfBirth" text="userDateOfBirth">
                           <graphic>
                              <Label text="Date of Birth:">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </graphic>
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <StackPane fx:id="friendRequestsButtonsStack">
                           <children>
                              <Button fx:id="sendFriendRequestButton" mnemonicParsing="false" text="Add" />
                              <Button fx:id="cancelFriendRequestButton" mnemonicParsing="false" text="Cancel" />
                              <HBox fx:id="friendAcceptAndDeclineButtonsBox" alignment="CENTER">
                                 <children>
                                    <Button fx:id="acceptFriendRequestButton" mnemonicParsing="false" text="Accept" />
                                    <Button fx:id="declineFriendRequestButton" mnemonicParsing="false" text="Decline" />
                                 </children>
                              </HBox>
                           </children>
                        </StackPane>
                     </children>
                  </VBox>
               </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
            </padding>
            </StackPane>
      </children>
   </VBox>
</fx:root>
