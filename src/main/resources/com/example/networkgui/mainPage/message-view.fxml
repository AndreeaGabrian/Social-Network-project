        <TextField fx:id="tf_message" layoutX="501.0" layoutY="606.0" prefHeight="26" prefWidth="550.0" promptText="Type a new message" style="-fx-background-color: F5FFFA;" />
        <ScrollPane fx:id="sp_main" fitToWidth="true" layoutX="501.0" layoutY="52.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="543.0" prefWidth="619.0" style="-fx-background-color: #D0ECE7;">
         <content>
                <VBox fx:id="vbox_messages" prefHeight="504.0" prefWidth="604.0" style="-fx-background-color: #F5FFFA;" />
         </content>
        </ScrollPane>
      <Label fx:id="chatWithLabel" layoutX="718.0" layoutY="37.0" prefHeight="26.0" prefWidth="185.0">
         <font>
            <Font size="14.0" />
         </font></Label>
      <VBox layoutX="81.0" layoutY="14.0" prefHeight="615.0" prefWidth="389.0">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="40.0" prefWidth="391.0">
               <children>
                  <Button fx:id="friendsButton" alignment="CENTER" mnemonicParsing="false" onAction="#friendListButton" prefHeight="37.0" prefWidth="112.0" stylesheets="@../styles/friends_navigation_buttons.css" text="Friends">
