                     </padding>
                  </Button>
                  <Button fx:id="findButton" alignment="CENTER" mnemonicParsing="false" onAction="#findListButton" prefHeight="37.0" prefWidth="112.0" stylesheets="@../styles/friends_navigation_buttons.css" text="Find">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
            <TextField fx:id="searchUserOrFriend" alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="177.0" promptText="  search" styleClass="search-bar" />
